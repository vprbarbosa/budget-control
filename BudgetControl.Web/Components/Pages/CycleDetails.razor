@using System.Globalization
@inject BudgetControl.Web.Services.BudgetApiClient Api

@if (_cycle is null || _days.Count == 0)
{
    <p>Carregando...</p>
}
else
{
    <div class="cycle-summary-cards">

        <div class="summary-card">
            <span>Total alocado</span>
            <strong>@_cycle!.TotalCapacity.ToString("C2", Br)</strong>
        </div>

        @if (_summary is not null)
        {
            <div class="summary-card">
                <span>Meta diária</span>
                <strong>@_summary.DailyCapacity.ToString("C2", Br)</strong>
            </div>
        }

        <div class="summary-card">
            <span>Total restante</span>
            <strong>@_cycle!.RemainingCapacity.ToString("C2", Br)</strong>
        </div>

        @if (_cycle!.IsOverBudget)
        {
            <div class="summary-card danger">
                <span>Gasto excedido</span>
                <strong>@_cycle.ExceededAmount.ToString("C2", Br)</strong>
            </div>
        }

        <div class="summary-card">
            <span>Dias restantes</span>
            <strong>@_cycle!.RemainingDays</strong>
        </div>

    </div>




    <button class="btn btn-compact"
            @onclick="OpenAdjustPeriodModal">
        🗓 Ajustar ciclo
    </button>

    <div class="card-view">
        @foreach (var day in _days)
        {
            <div class="day-card">
                <div class="day-header">
                    <strong>@day.Date.ToString("dd/MM")</strong>
                    <span>@day.Date.DayOfWeek</span>
                </div>
                <div class="day-body">
                    <span>@day.TotalSpent.ToString("C2", Br)</span>
                    @if (day.IsClosed)
                    {
                        <span class="closed">✔</span>
                    }
                </div>
            </div>
        }
    </div>

    <div class="table-view">
        <table>
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Dia</th>
                    <th style="text-align:right;">Gasto</th>
                    <th style="text-align:center;">Ações</th>
                    <th style="text-align:center;">Fechado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var day in _days)
                {
                    <tr>
                        <td>@day.Date.ToString("dd/MM")</td>
                        <td>@day.Date.DayOfWeek</td>
                        <td style="text-align:right;">
                            @day.TotalSpent.ToString("C2", Br)
                        </td>
                        <td class="actions-cell">
                            <button class="btn-action"
                                    title="Ver gastos"
                                    @onclick="() => OpenViewExpenses(day.Date)">
                                📋
                            </button>

                            <button class="btn-action"
                                    title="Adicionar gasto"
                                    @onclick="() => OpenAddExpense(day.Date)">
                                ➕
                            </button>                            
                        </td>
                        <td>@(day.IsClosed ? "✔" : "")</td>
                    </tr>
                }
            </tbody>
        </table>

        @if (_showViewExpensesModal)
        {
            <div class="budget-modal-backdrop">
                <div class="budget-modal">

                    <h3>Gastos — @_selectedDate.ToString("dd/MM/yyyy")</h3>

                    <hr />

                    @if (_expenses.Any())
                    {
                        <div class="expense-list">
                            @foreach (var e in _expenses)
                            {
                                <div class="expense-item">
                                    <span class="expense-amount">
                                        @e.Amount.ToString("C2", Br)
                                    </span>

                                    <span class="expense-description">
                                        @e.Description
                                    </span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p>Nenhum gasto neste dia.</p>
                    }

                    <div class="modal-actions">
                        <button class="btn btn-primary"
                                @onclick="() => _showViewExpensesModal = false">
                            Fechar
                        </button>
                    </div>
                </div>
            </div>
        }

        @if (_showAddExpenseModal)
        {
            <div class="budget-modal-backdrop">
                <div class="budget-modal">

                    <h3>Novo gasto — @_selectedDate.ToString("dd/MM/yyyy")</h3>

                    <div class="form-group">
                        <label>Valor</label>
                        <input type="number"
                               step="0.01"
                               @bind="_newExpenseAmount" />
                    </div>

                    <div class="form-group">
                        <label>Descrição</label>
                        <input @bind="_newExpenseDescription" />
                    </div>

                    <div class="modal-actions">
                        <button class="btn btn-secondary"
                                @onclick="() => _showAddExpenseModal = false">
                            Cancelar
                        </button>

                        <button class="btn btn-primary"
                                @onclick="AddExpense">
                            Adicionar
                        </button>
                    </div>
                </div>
            </div>
        }

        @if (_showAdjustCycleModal)
        {
            <div class="budget-modal-backdrop">
                <div class="budget-modal">

                    <h3>Ajustar período do ciclo</h3>

                    <div class="form-group">
                        <label>Nova data final</label>
                        <input type="date"
                               value="@_newEndDate.ToString("yyyy-MM-dd")"
                               @onchange="OnEndDateChanged" />
                    </div>

                     <div class="form-group">
                        <label>Novo valor total do ciclo (opcional)</label>
                        <input type="number"
                               step="0.01"
                               placeholder="Ex: 3500,00"
                               @onchange="OnTotalCapacityChanged" />
                    </div>

                    <div class="modal-actions">
                        <button class="btn btn-secondary"
                                @onclick="CloseAdjustCycleModal">
                            Cancelar
                        </button>

                        <button class="btn btn-primary"
                                @onclick="ConfirmAdjustCycle">
                            Confirmar
                        </button>
                    </div>
                </div>
            </div>
        }


    </div>
}

@code {
    private static readonly CultureInfo Br = new("pt-BR");

    private DateOnly _selectedDate;

    private bool _showViewExpensesModal;
    private bool _showAddExpenseModal;

    private IReadOnlyCollection<DayExpenseDto> _expenses = Array.Empty<DayExpenseDto>();

    private decimal _newExpenseAmount;
    private string _newExpenseDescription = "";
    
    [Parameter] public Guid CycleId { get; set; }
    [Parameter] public EventCallback<string> OnToastRequested { get; set; }

    private DailyBudgetSummaryDto? _summary;
    private BudgetCycleDetailsDto? _cycle;
    private IReadOnlyCollection<BudgetCycleDayDto> _days = Array.Empty<BudgetCycleDayDto>();

    private bool _showAdjustCycleModal;
    private DateOnly _newEndDate;
    private decimal? _newTotalCapacity;
    private bool _hasDailySummary;

    protected override async Task OnParametersSetAsync()
    {
        await RefreshCycle();
    }

    private async Task OpenViewExpenses(DateOnly date)
    {
        _selectedDate = date;
        _expenses = await Api.GetExpenses(CycleId, date);
        _showViewExpensesModal = true;
    }

    private void OpenAddExpense(DateOnly date)
    {
        _selectedDate = date;
        _newExpenseAmount = 0;
        _newExpenseDescription = "";
        _showAddExpenseModal = true;
    }

    private async Task AddExpense()
    {
        Console.WriteLine($"[UI] Selected date: {_selectedDate}");

        if (_newExpenseAmount <= 0)
            return;

        await Api.RegisterExpense(new RegisterPartialExpenseInput
        {
            BudgetCycleId = CycleId,
            Amount = _newExpenseAmount,
            Description = _newExpenseDescription,
            Date = _selectedDate
        });

        _expenses = await Api.GetExpenses(CycleId, _selectedDate);
        
        await RefreshCycle();

        _newExpenseAmount = 0;
        _newExpenseDescription = "";

        await OnToastRequested.InvokeAsync("Despesa registrada com sucesso");
    }

    private async Task RefreshCycle()
    {
        _cycle = await Api.GetCycleDetails(CycleId);
        _days = await Api.GetDays(CycleId);

        // summary agora é opcional
        _summary = await Api.TryGetDailySummary(CycleId);
    }


    private void OpenAdjustPeriodModal()
    {
        var lastDay = _days.Max(d => d.Date);
        _newEndDate = lastDay;
        _newTotalCapacity = null;

        _showAdjustCycleModal = true;
    }


    private void OnEndDateChanged(ChangeEventArgs e)
    {
        if (DateOnly.TryParse(e.Value?.ToString(), out var date))
            _newEndDate = date;
    }

    private void CloseAdjustCycleModal()
    {
        _showAdjustCycleModal = false;
    }

    private void OnTotalCapacityChanged(ChangeEventArgs e)
    {
        if (decimal.TryParse(
            e.Value?.ToString(),
            NumberStyles.Any,
            CultureInfo.InvariantCulture,
            out var value
        ))
            _newTotalCapacity = value;
        else
            _newTotalCapacity = null;
    }

    private async Task ConfirmAdjustCycle()
    {
        if (_newEndDate != default)
        {
            await Api.AdjustBudgetCyclePeriod(CycleId, _newEndDate);
        }

        if (_newTotalCapacity.HasValue)
        {
            await Api.AdjustCycleCapacity(
                CycleId,
                _newTotalCapacity.Value
            );
        }

        CloseAdjustCycleModal();
        await RefreshCycle();
    }

}
